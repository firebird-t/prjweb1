</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">#</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	      <li class="nav-item">
	        <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
	      </li>
	      <li class="nav-item">
	        <a class="nav-link" href="/listar_dispositivo" active>Meus Dispositivos</a>
	      </li>
	      <li class="nav-item">
	        <a class="nav-link" href="/status">Status</a>
	      </li>
	      <li class="nav-item">
	        <a class="nav-link" href="/meudados">Meu Cadastro</a>
	      </li>
	    </ul>
	  </div>
	</nav>
	<div class="container">
<body>

	<%if(validacao){ %>
	<ul>
		<% for(var i = 0; i < validacao.length; i++){ %>
			<li><%= validacao[i].msg %></li>		
		<% } %>
	</ul>
	<% }%>
	<form class="form-group" action="/dispositivos/inserir" method="post">
	  <div >
	    <label for="exampleInputEmail1">Nome do Dispositivo</label>
	    <input type="text" class="form-control" aria-describedby="emailHelp" name="nome">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputEmail1">IP de Acesso</label>
	    <input type="text" class="form-control" aria-describedby="emailHelp" name="ip">
	  </div>
	  <div class="form-group">
	    <label for="exampleInputEmail1">Protocolo</label>
	    <input type="text" class="form-control" aria-describedby="emailHelp" name="protocolo">
	  </div>
	  <button type="submit" class="btn btn-primary">Enviar</button>
	</form>
</body>
</html>