		<script type="text/javascript">
			
			if(getCookie("success") != null){
			  	 if(getCookie("success") == "true") {
			  		message.innerHTML = '<div class="alert alert-success" role="alert">Dados gravados com sucesso</div>';
				}else{
					message.innerHTML = '<div class="alert alert-danger" role="alert">Houve um erro ao gravar os dados</div>';
