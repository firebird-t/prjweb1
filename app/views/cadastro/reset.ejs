<!DOCTYPE html>
<html>
<head>
	<title>Cadastro</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">#</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	       <li class="nav-item">
	        <a class="nav-link" href="/">Página Inicial<span class="sr-only"></span></a>	        
	      </li>
	       <li class="nav-item active">
	        <a class="nav-link" href="#">Cadastro<span class="sr-only">(current)</span></a>	        
	      </li>
	    </ul>
	  </div>
	</nav>
	<%if(validacao){%>
	<ul>
		<% for(var i = 0; i < validacao.length; i++){ %>
			<li><%= validacao[i].msg %></li>		
		<% } %>
	</ul>
	<% }%>
	<div class="container">
		<form action="/cadastro/inserir" method="post" style="margin-top: 30px">
		  <div class="form-group">
		    <label for="email">Nome</label>
		    <input type="text" class="form-control" id="nome" name="nome" aria-describedby="emailHelp" length='10'>
		  </div>
		  <div class="form-group">
		    <label for="email">E-mail</label>
		    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" >
		  </div>
		  <div class="form-group">
		    <label for="email">Nome de usuário</label>
		    <input type="text" class="form-control" id="nome_usuario" name="nome_usuario" aria-describedby="emailHelp" length='8'>
		  </div>
		  <div class="form-group">
		    <label for="senha">Senha</label>
		    <input type="password" class="form-control" id="senha" name="senha">
		  </div>
		  <div class="form-group">
				<label for="senhav">Digite a sua senha novamente</label>
				<input type="password" class="form-control" id="senha" name="senhav">
		  </div>
		  <button type="submit" class="btn btn-primary">Enviar</button>
		</form>
	</div>

</body>
</html>